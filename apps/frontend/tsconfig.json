{
  // tsconfig.json para frontend React + Vite/Remix — Padrão internacional
  "include": ["env.d.ts", "**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "baseUrl": ".",
    // Adicione aliases se necessário, exemplo abaixo:
    // "paths": {
    //   "@components/*": ["src/components/*"]
    // },
    "types": ["node"] // Só mantenha se usar APIs node no frontend (process/env)
    // "allowImportingTsExtensions": true // Opcional, para projetos recentes
  }
}